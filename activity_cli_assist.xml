<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".CliAssist">

    <!-- TextView: in wich text vill be displayed after conversion from Speech-->

    <TextView
        android:id="@+id/textTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="360dp"
        android:text="Press mic button and speak..."
        android:textColor="#000"
        android:textSize="20sp" />

    <!-- ImageButton: by clicking this SpeechToText dialog will be shown-->

    <ImageButton
        android:id="@+id/voiceBtn"
        android:layout_width="143dp"
        android:layout_height="129dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="204dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_mic" />

    <EditText
        android:id="@+id/edIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="192.168.1.137" />

    <EditText
        android:id="@+id/edPORT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5500"
        android:layout_below="@+id/edIP"
        android:layout_alignStart="@+id/edIP"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edPORT"
        android:layout_alignStart="@+id/edIP"
        android:text="First of all set the IP and the PORT" />

</RelativeLayout>
